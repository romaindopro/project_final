{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
	<link rel="stylesheet" href={{ asset( 'style/article.css') }} type="text/css">
{% endblock %}
{% block title %}Article
{% endblock %}

{% block body %}
	{# <canvas id="canvas1"></canvas> #}
	<div
		class="container">

		{# <h1 class="heading-title">Article</h1> #}
		<div class="box-container">
			<div class="box">
				<div class="image">
					<img src="/upload/image/{{articles.image }}" alt="img">
				</div>
				<div class="content">
					<h3>{{ articles.title }}</h3>
					<p>{{ articles.content }}</p>

					{# <a href="{{ path('app_article_show', {'id': articles.id}) }}" class="btn">lire l'article</a> #}
					<span>
						publi√© le :
						{{ articles.publishedDate ? articles.publishedDate|date('d-m-Y') : ''}}
					</span>
				</div>
			</div>
			<div class="crea">
				{% if ( is_granted('ROLE_ADMIN') ) %}
					<a href="{{ path('app_article_edit', {'id': articles.id }) }}">
						<button class="btn">Modifier l'article</button>
					</a>

					{{ include('article/_delete_form.html.twig') }}
				{% endif %}
			</div>
		</div>
	</div>


	

{% endblock %}
